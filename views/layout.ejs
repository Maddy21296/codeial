<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link
        rel="stylesheet" href="https://cdn.jsdelivr.net/npm/noty@3.1.0/lib/noty.css"/>
        
        

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
        <link rel="stylesheet" href="<%= assetPath('css/layout.css')%>">
        <link rel="stylesheet" href="<%= assetPath('css/header.css')%>">
        <link rel="stylesheet" href="<%= assetPath('css/footer.css')%>">
        <%-style%>
    </head>
    <body>
        <%- include('_header'); %>

        <!-- <% if (flash.Success && flash.Success.length > 0){%>
            <h5>
                <%= flash.Success%>
            </h5>
        <% } %> -->
        <div id="ripple-background">
            <div  class="circle xxlarge shade1"></div>
            <div  class="circle xlarge shade2"></div>
            <div  class="circle large shade3"></div>
            <div  class="circle medium shade4"></div>
            <div  class="circle small shade5"></div>
            <div  class="circle nano shade6"></div>
        </div>
        
        <main id="layout-main">
            <%- body %>

        </main>


        <%- include('_footer'); %>

        <%- script %>

        <!-- by using noty js for notifications-->
        <script src="https://cdn.jsdelivr.net/npm/noty@3.1.0/lib/noty.min.js"></script>
        <script>
            <% if (flash.success && flash.success.length > 0){%>
                new Noty({
                    theme : 'relax',
                    text: '<%= flash.success%>',
                    type : 'success', // type is about to color scheme
                    layout : 'topRight', // position where we want to show flash message
                    timeout : 1500
                }).show();
            <% } %>

            <% if (flash.error && flash.error.length > 0) {%>
                new Noty({
                    theme : 'relax',
                    text: '<%= flash.error%>',
                    type : 'error',
                    layout : 'topRight',
                    timeout : 1500
                }).show();
            <% } %>
        </script>
        
    </body>
</html>